---
import { ExternalLink } from '@lucide/astro'

interface Props {
  title?: string
  description?: string
  buttonText?: string
  buttonHref?: string
}

const {
  title = "Try Jack The Butler Free",
  description = "Deploy in 5 minutes. No credit card required. Own your data forever.",
  buttonText = "Deploy Free Now",
  buttonHref = "https://railway.com/deploy/jack-the-butler"
} = Astro.props
---

<div class="not-prose my-12 p-8 rounded-2xl bg-gradient-to-r from-blue-600 to-emerald-600 text-white text-center">
  <h3 class="text-2xl font-bold mb-3">{title}</h3>
  <p class="text-white/80 mb-6 max-w-md mx-auto">
    {description}
  </p>
  <a
    href={buttonHref}
    class="inline-flex items-center gap-2 px-6 py-3 bg-white text-blue-600 font-semibold rounded-full hover:bg-neutral-100 transition-colors"
  >
    {buttonText}
    <ExternalLink class="w-4 h-4" />
  </a>
</div>
