---
import { Calendar, Clock, ArrowLeft } from '@lucide/astro'
import type { BlogPost } from '../../data/blog-posts'
import { formatDate } from '../../data/blog-posts'

interface Props {
  post: BlogPost
}

const { post } = Astro.props
---

<a href="/blog/" class="inline-flex items-center gap-2 text-neutral-500 dark:text-neutral-400 hover:text-neutral-900 dark:hover:text-white transition-colors mb-8">
  <ArrowLeft class="w-4 h-4" />
  Back to Blog
</a>

<header class="mb-12">
  <span class="inline-block px-3 py-1 rounded-full bg-blue-100 dark:bg-blue-500/10 text-blue-700 dark:text-blue-400 text-sm font-medium mb-4">
    {post.category}
  </span>
  <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold tracking-tight mb-6">
    {post.title}
  </h1>
  <p class="text-xl text-neutral-600 dark:text-neutral-400 mb-6">
    {post.description}
  </p>
  <div class="flex flex-wrap items-center gap-4 text-sm text-neutral-500 dark:text-neutral-400">
    <a href={`/blog/author/${post.author.slug}/`} class="flex items-center gap-2 hover:text-neutral-900 dark:hover:text-white transition-colors">
      <img src={post.author.avatar} alt={post.author.name} class="w-6 h-6 rounded-full object-cover" />
      {post.author.name}
    </a>
    <span class="flex items-center gap-1.5">
      <Calendar class="w-4 h-4" />
      {formatDate(post.date)}
    </span>
    <span class="flex items-center gap-1.5">
      <Clock class="w-4 h-4" />
      {post.readTime}
    </span>
  </div>
</header>
