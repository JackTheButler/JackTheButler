---
interface Step {
  title: string
  description: string
}

interface Props {
  title: string
  steps: Step[]
}

const { title, steps } = Astro.props
---

<section class="py-24 px-6">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl sm:text-4xl font-bold text-center mb-16">
      {title}
    </h2>

    <div class="space-y-12">
      {steps.map((step, index) => (
        <div class="flex gap-6">
          <div class="w-12 h-12 rounded-full bg-blue-600 text-white flex items-center justify-center font-bold shrink-0">
            {index + 1}
          </div>
          <div>
            <h3 class="text-xl font-semibold mb-2">{step.title}</h3>
            <p class="text-neutral-600 dark:text-neutral-400">
              {step.description}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
