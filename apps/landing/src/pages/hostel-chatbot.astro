---
import Layout from '../layouts/Layout.astro'
import ProductHero from '../components/product/ProductHero.astro'
import ProductExplainer from '../components/product/ProductExplainer.astro'
import FeatureGrid from '../components/product/FeatureGrid.astro'
import ComparisonTable from '../components/product/ComparisonTable.astro'
import HowItWorks from '../components/product/HowItWorks.astro'
import ProductFAQ from '../components/product/ProductFAQ.astro'
import Footer from '../components/Footer.astro'
import { productConfigs, sharedData } from '../data/product-pages'

const config = productConfigs.hostel
const { features, comparisonRows } = sharedData
---

<Layout
  title={config.title}
  description={config.metaDescription}
>
  <ProductHero
    highlight={config.heroHighlight}
    title={config.heroTitle}
    description={config.heroDescription}
  />

  <ProductExplainer
    badgeText={config.explainerBadge}
    title={config.explainerTitle}
    description={config.explainerDescription}
    howItWorksText={config.howItWorksText}
    howItWorksDescription={config.howItWorksDescription}
    features={config.features}
    highlightText={config.highlightText}
  />

  <FeatureGrid
    title={config.featureGridTitle}
    subtitle={config.featureGridSubtitle}
    features={features}
  />

  <ComparisonTable
    title={config.comparisonTitle}
    subtitle={config.comparisonSubtitle}
    rows={comparisonRows}
  />

  <HowItWorks
    title={config.howItWorksTitle}
    steps={config.steps}
  />

  <ProductFAQ
    title={config.faqTitle}
    items={config.faqItems}
  />

  <Footer />

  <!-- Live demo chat widget -->
  <button data-butler-chat style="display:none">Chat</button>
  <script is:inline src="https://demo.jackthebutler.com/widget.js" data-butler-key="wc_b50c560669b54cdcd5fa0d1ad70dcd8f"></script>
</Layout>
